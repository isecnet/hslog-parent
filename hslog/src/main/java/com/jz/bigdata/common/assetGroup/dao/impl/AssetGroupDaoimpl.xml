			<if test="asset_group_person != null and asset_group_person !=''" >
				and asset_group.asset_group_person LIKE CONCAT('%', #{asset_group_person}, '%')
			</if>
			<if test="startRecord != null and pageSize !=null" >
				limit #{startRecord},#{pageSize}
